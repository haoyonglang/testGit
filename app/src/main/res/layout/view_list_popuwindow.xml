<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:baselineAligned="false"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivUpOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@color/transparent"/>

        <ImageView
            android:id="@+id/ivUpTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@color/transparent"/>

        <ImageView
            android:id="@+id/ivUpThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@color/transparent"/>

        <ImageView
            android:id="@+id/ivUpFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_popuwindow_up"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/divider"
        android:dividerHeight="1dp"
        android:scrollbars="none">
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"/>

    <LinearLayout
        android:id="@+id/layout_pop_price"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="自定义"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_price_low"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="center"
            android:hint="最低价"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="-"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_price_high"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="center"
            android:hint="最高价"
            android:textSize="10sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="万"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/price_finish"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_red_radius"
            android:text="完成"
            android:textColor="@color/text_white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pop_type"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="自定义"
            android:textStyle="bold"/>

        <com.lang.zheren.view.WheelView
            android:id="@+id/wheel_1"
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="室"
            android:textStyle="bold"/>

        <com.lang.zheren.view.WheelView
            android:id="@+id/wheel_2"
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="厅"/>

        <com.lang.zheren.view.WheelView
            android:id="@+id/wheel_3"
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卫"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/type_finish"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_red_radius"
            android:text="完成"
            android:textColor="@color/text_white"/>

    </LinearLayout>

</LinearLayout>